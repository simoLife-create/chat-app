<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.saadbarhrouj.client.controller.ChatViewController"
      prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <TextArea fx:id="chatArea" VBox.vgrow="ALWAYS"/>
    <HBox>
        <TextField fx:id="messageField" HBox.hgrow="ALWAYS"/>
        <Button fx:id="sendButton" text="Envoyer" onAction="#onSendButtonClick"/>
    </HBox>
</VBox>